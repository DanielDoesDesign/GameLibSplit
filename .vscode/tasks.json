{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Project Setup",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "${workspaceFolder}/GameWin.bat",
                "args": [
                    "Debug"
                ]
            },
            "linux": {
                "command": "${workspaceFolder}/GameLinux.sh",
                "args": [
                    "Debug"
                ]
            }
        },
        { 
            "type": "shell",
            "label": "Build Debug",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "cmake",
                "args": [
                    "--build",
                    "Targets/Debug"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build Release",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "cmake",
                "args": [
                    "--build",
                    "Targets/Release"
                ]
            }
        }
    ]
}
